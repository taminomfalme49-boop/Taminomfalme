<script>
const tv = document.getElementById("tv");
const fileInput = document.getElementById("fileInput");

let coins = localStorage.getItem("taminoCoins")
  ? parseInt(localStorage.getItem("taminoCoins"))
  : 0;

document.getElementById("coins").innerText = coins;

// VIDEO 20 ZA KUANZIA (HTTPS HALISI)
let playlist = [
  "https://www.w3schools.com/html/mov_bbb.mp4",
  "https://interactive-examples.mdn.mozilla.net/media/cc0-videos/flower.mp4",
  "https://media.w3.org/2010/05/sintel/trailer.mp4",
  "https://media.w3.org/2010/05/bunny/trailer.mp4",
  "https://media.w3.org/2010/05/video/movie_300.mp4"
];

// rudia mpaka zifike 20
while(playlist.length < 20){
  playlist.push(playlist[playlist.length % 5]);
}

let index = 0;

function playVideo(i){
  tv.src = playlist[i];
  tv.play().catch(()=>{});
}

tv.onended = () => {
  coins += 10;
  localStorage.setItem("taminoCoins", coins);
  document.getElementById("coins").innerText = coins;

  index = (index + 1) % playlist.length;
  playVideo(index);
};

playVideo(index);

// ONGEZA VIDEO ZA NDANI
function addVideo(){
  fileInput.click();
}

fileInput.onchange = () => {
  for(let file of fileInput.files){
    let url = URL.createObjectURL(file);
    playlist.push(url);
  }
  alert("Video zimeongezwa kwenye TV");
};

// LINKS HALISI
function openMetaMask(){
  window.location.href = "https://metamask.app.link/";
}

function openBinance(){
  window.location.href = "https://www.binance.com/";
}

function mpesa(){
  alert(
    "Coin zako: " + coins +
    "\nBadilisha kupitia MetaMask au Binance"
  );
}
</script>

